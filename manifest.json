{
    "manifest_version": 2,
    "name": "Youtube Manage Watch Later",
    "version": "1.1",
    "homepage_url": "https://github.com/terrysaw/firefox-youtube-watch-later-manager",
    "description": "Helps you manage your Youtube watch later playlist",
    "icons": {
        "48": "icons/watchlater-manager.svg"
    },

"permissions": ["activeTab", "storage"],

    "options_ui": {
        "page": "html/options.html"
    },

    "browser_specific_settings": {
        "gecko": {
            "id": "@watch-later-manager",
            "data_collection_permissions": {
                "required": ["none"],
                "optional": []
            }
        }
    },

    "content_scripts": [
        {
            "matches": ["*://*.youtube.com/*"],
            "js": ["dist/watchlater.js"],
            "run_at": "document_idle"
        }
    ]
}
